# ============================================
# DEPLOYMENT MODE
# ============================================

# Choose one: "self-hosted" or "cloud"
DEPLOYMENT_MODE=self-hosted

# ============================================
# OPTION 1: SELF-HOSTED SUPABASE (Docker)
# ============================================
# Generate these keys yourself with: openssl rand -base64 32

# Database
POSTGRES_PASSWORD=your-super-secret-password
POSTGRES_PORT=5432

# JWT Secrets (Generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-at-least-32-characters-long
ANON_KEY=your-anon-key
SERVICE_ROLE_KEY=your-service-role-key

# Supabase URLs (for self-hosted)
API_EXTERNAL_URL=http://localhost:8000
SITE_URL=http://localhost:3000

# ============================================
# OPTION 2: SUPABASE CLOUD
# ============================================
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api

# SUPABASE_URL=https://YOUR_PROJECT.supabase.co
# SUPABASE_ANON_KEY=eyJ...your-anon-key-from-supabase-dashboard
# SUPABASE_SERVICE_KEY=eyJ...your-service-role-key-from-dashboard
# 
# Note: If using Supabase Cloud, comment out the self-hosted section above
# and uncomment these lines with your actual values

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================

ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SENDER_NAME=AI Governance Portal

# Additional Configuration
DISABLE_SIGNUP=false
ADDITIONAL_REDIRECT_URLS=

# ============================================
# SERVICE PORTS
# ============================================

# Kong API Gateway (only for self-hosted)
KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443

# Application Services
DOCS_PORT=8001
API_PORT=8080
DASHBOARD_PORT=3000
TRAINING_PORT=8082

# Supabase Services (only for self-hosted)
REALTIME_PORT=4000
STORAGE_PORT=5000

# Redis
REDIS_PORT=6379

# Temporal
TEMPORAL_PORT=7233
TEMPORAL_UI_PORT=8088

# Observability
ELASTICSEARCH_PORT=9200
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268

# OpenTelemetry
OTEL_GRPC_PORT=4317
OTEL_HTTP_PORT=4318
OTEL_METRICS_PORT=8888

# ============================================
# KNOWLEDGE HUB (Backstage + Langfuse)
# ============================================

# Backstage Ports
BACKSTAGE_PORT=7007
BACKSTAGE_FRONTEND_PORT=3002
BACKSTAGE_DB_PORT=5433
BACKSTAGE_DB_PASSWORD=backstage123

# Langfuse Integration
# Get these from your Langfuse dashboard: https://cloud.langfuse.com
LANGFUSE_BASE_URL=https://cloud.langfuse.com
LANGFUSE_PUBLIC_KEY=pk-lf-xxxxxxxxxxxxxxxxxxxx
LANGFUSE_SECRET_KEY=sk-lf-xxxxxxxxxxxxxxxxxxxx

# Backstage Auth
AUTH_SECRET=your-backstage-auth-secret-32-chars
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret